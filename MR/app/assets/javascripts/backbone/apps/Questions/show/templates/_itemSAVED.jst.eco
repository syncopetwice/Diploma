
  <div class="question">
    <%= @body.title %>
  </div>
  <div class="options">
    <% for option in @body.options: %>
      <div class="option">
        <input type="radio" id="radio-<%= @body.question %>-<%= option %>" class="radio" name="values-<%= @body.question %>" value=<%= option %>>
        <label for="radio-<%= @body.question %>-<%= option %>" class="option-label"><%= option %></label>
      </div>
    <% end %>
  </div>
